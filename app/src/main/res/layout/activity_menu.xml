<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Menu"
    android:background="@drawable/fondo"> <!-- Fondo de pantalla -->

    <!-- Título principal del menú -->
    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Menu"
        android:textColor="@color/black"
        android:textStyle="bold"
        android:textAppearance="@style/TextAppearance.Material3.DisplayLarge"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="95dp" />

    <!-- Botón para realizar un viaje -->
    <com.google.android.material.button.MaterialButton
        android:id="@+id/btnRealizarViaje"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:text="Realizar Viaje"
        android:layout_marginTop="95dp"
        android:textSize="17dp"
        android:textStyle="bold"
        app:layout_constraintTop_toBottomOf="@id/textView"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- Botón para ir al historial de viajes -->
    <com.google.android.material.button.MaterialButton
        android:id="@+id/btnHistorial"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:text="Historial"
        android:textStyle="bold"
        android:textSize="17dp"
        android:layout_marginTop="65dp"
        app:layout_constraintTop_toBottomOf="@id/btnRealizarViaje"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- Botón para cerrar sesión -->
    <com.google.android.material.button.MaterialButton
        android:id="@+id/btnLogout"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:text="Cerrar Sesión"
        android:textStyle="bold"
        android:textSize="17dp"
        android:layout_margin="16dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <!-- Botón para volver al inicio -->
    <com.google.android.material.button.MaterialButton
        android:id="@+id/btnVolverInicio"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:text="Volver al Inicio"
        android:textStyle="bold"
        android:textSize="17dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginBottom="16dp"
        android:layout_marginEnd="16dp" />

</androidx.constraintlayout.widget.ConstraintLayout>