<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Vistas.ContactosFragment">

    <!-- TODO: Update blank fragment layout -->
    <!-- Título principal de la pantalla, centrado -->
    <TextView
        android:id="@+id/tilContactanos"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Contactanos"
        android:textColor="@color/black"
        android:gravity="center"
        android:textSize="50sp"
        android:layout_marginTop="220dp"/>

    <!-- Subtítulo con mensaje adicional -->
    <TextView
        android:id="@+id/tilMessage"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Si tienes preguntas o necesitas ayuda, ¡contactanos!"
        android:gravity="center"
        android:textSize="20sp"
        android:textColor="@android:color/black"
        android:layout_marginTop="380dp"/>


</FrameLayout>