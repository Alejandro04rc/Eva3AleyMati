<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Vistas.NosotrosFragment">

    <!-- TODO: Update blank fragment layout -->
    <!-- Título principal de la pantalla, centrado -->
    <TextView
        android:id="@+id/tilNosotros"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Nosotros"
        android:textColor="@color/black"
        android:gravity="center"
        android:textSize="50sp"
        android:layout_marginTop="220dp"/>

    <!-- Subtítulo con mensaje adicional -->
    <TextView
        android:id="@+id/tilMessage"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Somos una plataforma diseñada para facilitar y organizar tus viajes, brindándote las mejores opciones y herramientas para un viaje seguro y cómodo."
        android:gravity="center"
        android:textSize="25sp"
        android:textColor="@android:color/black"
        android:layout_marginTop="360dp"/>

</FrameLayout>